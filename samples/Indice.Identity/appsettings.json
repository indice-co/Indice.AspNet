  "IdentityOptions": {
    "ClaimsIdentity": {
      "RoleClaimType": "role",
      "UserIdClaimType": "sub",
      "UserNameClaimType": "name"
    },
    "Lockout": {
      "AllowedForNewUsers": true,
      "DefaultLockoutTimeSpan": "01.00:00:00",
      "MaxFailedAccessAttempts": 5
    },
    "Password": {
      "AllowedCharacters": "0123456789abcdefghijklmnopqrstuvwxyz#$*&",
      "AllowUnicodeCharacters": false,
      "Blacklist": [
        "123abc!!"
      ],
      "MaxAllowedUserNameSubset": 3,
      "PasswordExpirationPolicy": "Annually",
      "PasswordHistoryLimit": 9,
      "RequireDigit": true,
      "RequiredLength": 8,
      "RequiredUniqueChars": 1,
      "RequireLowercase": true,
      "RequireNonAlphanumeric": true,
      "RequireUppercase": true
    },
    "SignIn": {
      "ExpireBlacklistedPasswordsOnSignIn": true,
      "ExternalScheme": "idsrv.external",
      "Mfa": {
        "AllowChannelDowngrade": true,
        "Enforce": false,
        "PersistTrustedBrowsers": true,
        "RememberDurationInDays": 90,
        "RememberExpirationType": "Sliding",
        "RememberTrustedBrowserAcrossSessions": true
      },
      "RequireConfirmedAccount": false,
      "RequireConfirmedPhoneNumber": false,
      "RequirePostSignInConfirmedEmail": false,
      "RequirePostSignInConfirmedPhoneNumber": false
    },
    "User": {
      "Devices": {
        "DefaultAllowedRegisteredDevices": 3,
        "MaxAllowedRegisteredDevices": 6,
        "MaxTrustedDevices": 1,
        "RequirePasswordAfterUserUpdate": true,
        "TrustActivationDelay": "02.00:00:00" // 48 hours = 2 days
      },
      "EmailAsUserName": true,
      "RequireUniqueEmail": true
    }
  },

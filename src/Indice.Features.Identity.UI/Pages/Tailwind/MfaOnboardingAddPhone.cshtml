@page "/login/mfa/onboarding/add-phone"

@model BaseMfaOnboardingAddPhoneModel

@inject IIdentityViewLocalizer Localizer
@inject IWebHostEnvironment HostingEnvironment

@{
    var title = ViewBag.Title = Localizer["MFA onboarding - SMS"].Value;
    var alert = TempData.Peek<AlertModel>(BaseMfaOnboardingAddPhoneModel.TempDataKey);
}

<div class="sign-in m-auto">
    <vc:page-heading title="@title" image-src="" />
    <partial name="_ValidationSummary" />
    <partial name="_Alert" model="alert" />
    <form asp-route-returnUrl="@Model.View.ReturnUrl" method="post" novalidate>
        <input type="hidden" data-env="@HostingEnvironment.EnvironmentName" />
        <input type="hidden" asp-for="Input.ReturnUrl" />
        <div class="flex mb-3 gap-1">
            <select class="w-full sm:w-32"
                    indice-if="Model.GetPhoneCallingCodes() is not null"
                    asp-for="Input.PhoneCallingCode"
                    disabled="@Model.View.DisablePhoneNumberInput">
                @foreach (var option in Model.GetPhoneCallingCodes()!)
                {
                    <option value="@option.Value" data-text="@option.Text">@option.Text</option>
                }
            </select>
            <div class="relative flex-grow">
                <input class="peer" type="text" placeholder="@Localizer["Phone number"]" asp-for="Input.PhoneNumber" readonly="@Model.View.DisablePhoneNumberInput" />
                <label asp-for="Input.PhoneNumber" class="peer-focus:-translate-y-[6px] peer-focus:visible absolute">@Localizer["Phone number"]</label>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
        </div>
        <div class="mb-3">
            <div class="row m-0 w-100">
                <div class="col-12 py-1">
                    @if (!string.IsNullOrEmpty(Model.View.NextStepUrl))
                    {
                        <a class="btn btn-info w-100" href="@Model.View.NextStepUrl">@Localizer["Next"]</a>
                    }
                    else
                    {
                        <button class="btn btn-info w-100" type="submit">@Localizer["Save"]</button>
                    }
                </div>
            </div>
        </div>
    </form>
</div>

@section scripts {
    <partial name="_ValidationScripts" />
    <script type="text/javascript" src="/js/calling-codes-select.js" csp-nonce="true" data-id="@Html.IdFor(x => x.Input.PhoneCallingCode)"></script>
}

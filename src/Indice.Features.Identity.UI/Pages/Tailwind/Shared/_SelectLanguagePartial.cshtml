            <ul class="py-1 text-sm text-gray-700 dark:text-gray-200" aria-labelledby="dropdownDefault">
                <form asp-page="/SetLanguage" id="selectLanguage" asp-route-returnUrl="@Context.Request.GetUri().PathAndQuery" method="post" role="form">
                    @foreach (var supportedCulture in supportedCultures)
                    {
                        <li>
                            <button type="submit" id="@supportedCulture.Name" form="selectLanguage" name="culture" value="@supportedCulture.Name" class="block py-2 px-4 hover:bg-gray-100 no-underline w-full text-left">
                                @(supportedCulture.Name == "en" ? "English" : supportedCulture.Name == "el" ? "Ελληνικά" : supportedCulture.DisplayName)
